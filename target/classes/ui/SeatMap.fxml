<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx"
    xmlns:fx="http://javafx.com/fxml"
    fx:controller="com.ptit.ticketing.ui.SeatMapController"
    prefHeight="800.0" prefWidth="1200.0"
    style="-fx-background-color: linear-gradient(to bottom, #1a1a2e, #16213e);">

    <!-- Header -->
    <top>
        <VBox spacing="10" style="-fx-background-color: rgba(255,255,255,0.05); -fx-padding: 20;">
            <HBox alignment="CENTER_LEFT" spacing="15">
                <Button fx:id="backButton" text="← Back" onAction="#handleBack"
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20; -fx-background-radius: 5; -fx-cursor: hand;" />

                <Region HBox.hgrow="ALWAYS" />

                <Label text="SELECT YOUR SEATS"
                    style="-fx-text-fill: white; -fx-font-size: 28px; -fx-font-weight: bold;" />

                <Region HBox.hgrow="ALWAYS" />

                <!-- Timer Display -->
                <VBox alignment="CENTER" spacing="3"
                    style="-fx-background-color: rgba(231, 76, 60, 0.2); -fx-padding: 10 15; -fx-background-radius: 8; -fx-border-color: #e74c3c; -fx-border-width: 2; -fx-border-radius: 8;">
                    <Label text="⏰ Time Remaining"
                        style="-fx-text-fill: #ecf0f1; -fx-font-size: 12px;" />
                    <Label fx:id="timerLabel" text="10:00"
                        style="-fx-text-fill: #e74c3c; -fx-font-size: 24px; -fx-font-weight: bold;" />
                </VBox>
            </HBox>

            <Separator style="-fx-background-color: rgba(255,255,255,0.2);" />

            <VBox spacing="5" alignment="CENTER">
                <Label fx:id="movieTitleLabel" text="Movie Title"
                    style="-fx-text-fill: #3498db; -fx-font-size: 22px; -fx-font-weight: bold;" />
                <Label fx:id="showtimeInfoLabel" text="Showtime Info"
                    style="-fx-text-fill: #ecf0f1; -fx-font-size: 14px;" />
            </VBox>
        </VBox>
    </top>

    <!-- Center - Seat Grid -->
    <center>
        <VBox alignment="TOP_CENTER" spacing="20" style="-fx-padding: 30;">

            <!-- Screen -->
            <VBox alignment="CENTER" spacing="5">
                <Label text="SCREEN"
                    style="-fx-text-fill: #bdc3c7; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-color: rgba(255,255,255,0.1); -fx-padding: 5 40; -fx-background-radius: 3;" />
                <Separator prefWidth="400" style="-fx-background-color: #3498db;" />
            </VBox>

            <!-- Seat Grid -->
            <ScrollPane fitToWidth="true" fitToHeight="true"
                style="-fx-background-color: transparent; -fx-background: transparent;">
                <VBox alignment="CENTER">
                    <GridPane fx:id="seatGrid" alignment="CENTER" hgap="8" vgap="8">
                        <padding>
                            <Insets top="20" right="20" bottom="20" left="20" />
                        </padding>
                    </GridPane>
                </VBox>
            </ScrollPane>

            <!-- Legend -->
            <VBox spacing="15" alignment="CENTER" style="-fx-padding: 10;">
                <!-- Seat Types với giá -->
                <HBox spacing="30" alignment="CENTER">
                    <HBox spacing="10" alignment="CENTER">
                        <Region
                            style="-fx-background-color: #2ecc71; -fx-pref-width: 30; -fx-pref-height: 30; -fx-background-radius: 5;" />
                        <Label text="Standard (50k)"
                            style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;" />
                    </HBox>
                    <HBox spacing="10" alignment="CENTER">
                        <Region
                            style="-fx-background-color: #f39c12; -fx-pref-width: 30; -fx-pref-height: 30; -fx-background-radius: 5;" />
                        <Label text="VIP (80k)"
                            style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;" />
                    </HBox>
                    <HBox spacing="10" alignment="CENTER">
                        <Region
                            style="-fx-background-color: #e91e63; -fx-pref-width: 60; -fx-pref-height: 30; -fx-background-radius: 5;" />
                        <Label text="Couple (150k)"
                            style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;" />
                    </HBox>
                </HBox>

                <!-- Status -->
                <HBox spacing="30" alignment="CENTER">
                    <HBox spacing="10" alignment="CENTER">
                        <Region
                            style="-fx-background-color: #3498db; -fx-pref-width: 30; -fx-pref-height: 30; -fx-background-radius: 5;" />
                        <Label text="Selected" style="-fx-text-fill: white; -fx-font-size: 14px;" />
                    </HBox>
                    <HBox spacing="10" alignment="CENTER">
                        <Region
                            style="-fx-background-color: #e74c3c; -fx-pref-width: 30; -fx-pref-height: 30; -fx-background-radius: 5;" />
                        <Label text="Booked" style="-fx-text-fill: white; -fx-font-size: 14px;" />
                    </HBox>
                </HBox>
            </VBox>
        </VBox>
    </center>

    <!-- Bottom - Summary & Confirm -->
    <bottom>
        <VBox spacing="15" style="-fx-background-color: rgba(255,255,255,0.05); -fx-padding: 20;">
            <HBox spacing="20" alignment="CENTER">
                <VBox spacing="5" HBox.hgrow="ALWAYS">
                    <Label fx:id="selectedSeatsLabel" text="Selected: None"
                        style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" />
                    <Label fx:id="totalPriceLabel" text="Total: 0 VND"
                        style="-fx-text-fill: #2ecc71; -fx-font-size: 20px; -fx-font-weight: bold;" />
                </VBox>

                <Button fx:id="confirmButton" text="CONFIRM BOOKING"
                    onAction="#handleConfirmBooking" disable="true"
                    style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold; -fx-padding: 15 40; -fx-background-radius: 5; -fx-cursor: hand;" />
            </HBox>
        </VBox>
    </bottom>

</BorderPane>