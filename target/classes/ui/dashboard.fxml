                <VBox>
                    <Label fx:id="welcomeLabel" text="Welcome back, User!"
                        style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;" />
                    <Label fx:id="roleLabel" text="Role: Customer"
