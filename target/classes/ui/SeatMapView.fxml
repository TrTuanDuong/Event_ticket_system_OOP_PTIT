<?xml version="1.0" encoding="UTF-8"?>

<?import com.ptit.ticketing.domain.Showtime?> <?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" 
            stylesheets="@../css/seatmap.css" 
            xmlns="http://javafx.com/javafx/21" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.ptit.ticketing.ui.SeatMapController">
   <children>
      <Label layoutX="32.0" layoutY="31.0" text="Chọn suất chiếu:">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      
      <ComboBox fx:id="showtimeComboBox" layoutX="180.0" layoutY="31.0" prefWidth="580.0" promptText="Vui lòng chọn suất chiếu..." />
      
      <Label layoutX="364.0" layoutY="80.0" text="MÀN HÌNH">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      
      <GridPane fx:id="seatGridPane" layoutX="50.0" layoutY="110.0" hgap="5" vgap="5" gridLinesVisible="false" />
      
      <Label layoutX="50.0" layoutY="520.0" text="Đã chọn:">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      
      <Label fx:id="selectedInfoLabel" layoutX="120.0" layoutY="522.0" text="Chưa chọn ghế nào." textFill="#b50000">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      
      <Button fx:id="bookingButton" layoutX="650.0" layoutY="515.0" mnemonicParsing="false" prefHeight="40.0" prefWidth="120.0" text="Đặt vé" disable="true">
         <font>
            <Font size="16.0" />
         </font>
      </Button>
   </children>
</AnchorPane>