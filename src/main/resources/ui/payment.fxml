<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<BorderPane xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="com.ptit.ticketing.ui.PaymentController"
    prefHeight="800.0" prefWidth="1200.0"
    style="-fx-background-color: #f5f7fa;">

    <!-- Top: Header -->
    <top>
        <VBox
            style="-fx-background-color: linear-gradient(to right, #667eea, #764ba2); -fx-padding: 20 30;">
            <HBox alignment="CENTER_LEFT" spacing="20">
                <Button fx:id="backButton" text="← Back to Seat Selection" onAction="#handleBack"
                    style="-fx-background-color: rgba(255,255,255,0.2); -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20; -fx-background-radius: 8; -fx-cursor: hand;">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>

                <Label text="💳" style="-fx-font-size: 32px;" />

                <VBox>
                    <Label text="Payment"
                        style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;" />
                    <Label fx:id="bookingInfoLabel" text="Complete your booking"
                        style="-fx-text-fill: rgba(255,255,255,0.9); -fx-font-size: 14px;" />
                </VBox>

                <Region HBox.hgrow="ALWAYS" />

                <!-- Timer Display -->
                <VBox alignment="CENTER" spacing="3"
                    style="-fx-background-color: rgba(231, 76, 60, 0.2); -fx-padding: 10 15; -fx-background-radius: 8; -fx-border-color: #e74c3c; -fx-border-width: 2; -fx-border-radius: 8;">
                    <Label text="⏰ Time Remaining"
                        style="-fx-text-fill: #ecf0f1; -fx-font-size: 12px; -fx-font-weight: bold;" />
                    <Label fx:id="timerLabel" text="10:00"
                        style="-fx-text-fill: #e74c3c; -fx-font-size: 24px; -fx-font-weight: bold;" />
                </VBox>

                <Button text="⚙️ Settings" onAction="#handleSettings"
                    style="-fx-background-color: rgba(255,255,255,0.2); -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20; -fx-background-radius: 8; -fx-cursor: hand;">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>

                <Button text="Logout" onAction="#handleLogout"
                    style="-fx-background-color: rgba(231, 76, 60, 0.9); -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20; -fx-background-radius: 8; -fx-cursor: hand;">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>
            </HBox>
        </VBox>
    </top>

    <!-- Center: Payment Options -->
    <center>
        <ScrollPane fitToWidth="true"
            style="-fx-background: #f5f7fa; -fx-background-color: #f5f7fa;">
            <VBox alignment="TOP_CENTER" spacing="30" style="-fx-padding: 40;">

                <!-- Booking Summary -->
                <VBox alignment="CENTER" spacing="15"
                    style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 30; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);"
                    maxWidth="800">

                    <Label text="📋 Booking Summary"
                        style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

                    <Separator prefWidth="700" />

                    <GridPane hgap="20" vgap="10" alignment="CENTER">
                        <Label text="Movie:" GridPane.columnIndex="0" GridPane.rowIndex="0"
                            style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d; -fx-font-weight: bold;" />
                        <Label fx:id="movieLabel" text="Movie Title" GridPane.columnIndex="1"
                            GridPane.rowIndex="0"
                            style="-fx-font-size: 14px; -fx-text-fill: #2c3e50;" />

                        <Label text="Showtime:" GridPane.columnIndex="0" GridPane.rowIndex="1"
                            style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d; -fx-font-weight: bold;" />
                        <Label fx:id="showtimeLabel" text="Date and Time" GridPane.columnIndex="1"
                            GridPane.rowIndex="1"
                            style="-fx-font-size: 14px; -fx-text-fill: #2c3e50;" />

                        <Label text="Auditorium:" GridPane.columnIndex="0" GridPane.rowIndex="2"
                            style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d; -fx-font-weight: bold;" />
                        <Label fx:id="auditoriumLabel" text="Auditorium Name"
                            GridPane.columnIndex="1" GridPane.rowIndex="2"
                            style="-fx-font-size: 14px; -fx-text-fill: #2c3e50;" />

                        <Label text="Seats:" GridPane.columnIndex="0" GridPane.rowIndex="3"
                            style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d; -fx-font-weight: bold;" />
                        <Label fx:id="seatsLabel" text="A1, A2, A3" GridPane.columnIndex="1"
                            GridPane.rowIndex="3"
                            style="-fx-font-size: 14px; -fx-text-fill: #2c3e50;" />
                    </GridPane>

                    <Separator prefWidth="700" />

                    <HBox alignment="CENTER" spacing="20">
                        <Label text="Total Amount:"
                            style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                        <Label fx:id="totalLabel" text="0 VND"
                            style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #e74c3c;" />
                    </HBox>
                </VBox>

                <!-- Payment Methods -->
                <VBox alignment="CENTER" spacing="20" maxWidth="800">
                    <Label text="Select Payment Method"
                        style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

                    <HBox spacing="30" alignment="CENTER">

                        <!-- QR Code Payment -->
                        <VBox alignment="CENTER" spacing="15"
                            style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 30; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2); -fx-cursor: hand;"
                            onMouseClicked="#handleSelectQRPayment"
                            prefWidth="350" prefHeight="400">

                            <Label text="📱" style="-fx-font-size: 48px;" />
                            <Label text="QR Code Payment"
                                style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

                            <Label text="Scan to pay with:"
                                style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;" />

                            <VBox alignment="CENTER_LEFT" spacing="5">
                                <Label text="✓ Banking App"
                                    style="-fx-font-size: 13px; -fx-text-fill: #34495e;" />
                                <Label text="✓ E-Wallet (Momo, ZaloPay)"
                                    style="-fx-font-size: 13px; -fx-text-fill: #34495e;" />
                                <Label text="✓ QR Code Scanner"
                                    style="-fx-font-size: 13px; -fx-text-fill: #34495e;" />
                            </VBox>

                            <Region VBox.vgrow="ALWAYS" />

                            <Button fx:id="qrButton" text="Select QR Payment"
                                onAction="#handleSelectQRPayment"
                                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 12 30; -fx-background-radius: 8; -fx-cursor: hand; -fx-font-weight: bold;"
                                prefWidth="250" />
                        </VBox>

                        <!-- Cash Payment -->
                        <VBox alignment="CENTER" spacing="15"
                            style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 30; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2); -fx-cursor: hand;"
                            onMouseClicked="#handleSelectCashPayment"
                            prefWidth="350" prefHeight="400">

                            <Label text="💵" style="-fx-font-size: 48px;" />
                            <Label text="Cash Payment"
                                style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

                            <Label text="Pay at counter:"
                                style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;" />

                            <VBox alignment="CENTER_LEFT" spacing="5">
                                <Label text="✓ Pay at cinema counter"
                                    style="-fx-font-size: 13px; -fx-text-fill: #34495e;" />
                                <Label text="✓ Show booking code"
                                    style="-fx-font-size: 13px; -fx-text-fill: #34495e;" />
                                <Label text="✓ Receive tickets"
                                    style="-fx-font-size: 13px; -fx-text-fill: #34495e;" />
                            </VBox>

                            <Region VBox.vgrow="ALWAYS" />

                            <Button fx:id="cashButton" text="Select Cash Payment"
                                onAction="#handleSelectCashPayment"
                                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 12 30; -fx-background-radius: 8; -fx-cursor: hand; -fx-font-weight: bold;"
                                prefWidth="250" />
                        </VBox>

                    </HBox>
                </VBox>

                <!-- QR Code Display (initially hidden) -->
                <VBox fx:id="qrCodeContainer" alignment="CENTER" spacing="20"
                    style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 40; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);"
                    maxWidth="500" visible="false" managed="false">

                    <Label text="Scan QR Code to Pay"
                        style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

                    <!-- QR Code Image Placeholder -->
                    <VBox alignment="CENTER"
                        style="-fx-background-color: #ecf0f1; -fx-padding: 20; -fx-background-radius: 10;"
                        prefWidth="300" prefHeight="300">
                        <Label fx:id="qrCodeLabel" text="[QR CODE]"
                            style="-fx-font-size: 48px; -fx-text-fill: #95a5a6;" />
                    </VBox>

                    <Label fx:id="qrAmountLabel" text="Amount: 0 VND"
                        style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #e74c3c;" />

                    <HBox spacing="15" alignment="CENTER">
                        <Button text="Cancel" onAction="#handleCancelPayment"
                            style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 12 30; -fx-background-radius: 8; -fx-cursor: hand;" />

                        <Button text="Confirm Payment" onAction="#handleConfirmPayment"
                            style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 12 30; -fx-background-radius: 8; -fx-cursor: hand; -fx-font-weight: bold;" />
                    </HBox>
                </VBox>

            </VBox>
        </ScrollPane>
    </center>

</BorderPane>