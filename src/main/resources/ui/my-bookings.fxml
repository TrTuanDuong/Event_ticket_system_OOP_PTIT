<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
    xmlns:fx="http://javafx.com/fxml"
    fx:controller="com.ptit.ticketing.ui.MyBookingsController"
    prefHeight="800.0" prefWidth="1200.0"
    style="-fx-background-color: linear-gradient(to bottom, #667eea, #764ba2);">

    <!-- Header -->
    <top>
        <VBox spacing="15" style="-fx-padding: 30; -fx-background-color: rgba(255,255,255,0.05);">
            <HBox alignment="CENTER_LEFT" spacing="20">
                <Button fx:id="backButton" text="← Back" onAction="#handleBack"
                    style="-fx-background-color: rgba(255,255,255,0.2); -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20; -fx-background-radius: 8; -fx-cursor: hand;" />

                <Region HBox.hgrow="ALWAYS" />

                <Label fx:id="titleLabel" text="My Bookings"
                    style="-fx-text-fill: white; -fx-font-size: 28px; -fx-font-weight: bold;" />

                <Region HBox.hgrow="ALWAYS" />

                <!-- Settings Button -->
                <Button text="⚙️ Settings" onAction="#handleSettings"
                    style="-fx-background-color: rgba(255,255,255,0.2); -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20; -fx-background-radius: 8; -fx-cursor: hand; -fx-font-weight: bold;" />

                <!-- Logout Button -->
                <Button text="Logout" onAction="#handleLogout"
                    style="-fx-background-color: rgba(231, 76, 60, 0.9); -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20; -fx-background-radius: 8; -fx-cursor: hand; -fx-font-weight: bold;" />
            </HBox>

            <Separator style="-fx-background-color: rgba(255,255,255,0.3);" />
        </VBox>
    </top>

    <!-- Center - Bookings List -->
    <center>
        <ScrollPane fitToWidth="true"
            style="-fx-background-color: transparent; -fx-background: transparent;">
            <VBox style="-fx-padding: 30;">

                <!-- Empty state -->
                <Label fx:id="emptyLabel" text="No bookings yet. Start by browsing movies!"
                    style="-fx-text-fill: white; -fx-font-size: 18px; -fx-padding: 50;"
                    alignment="CENTER" visible="false" />

                <!-- Bookings container -->
                <VBox fx:id="bookingsContainer" spacing="15">
                    <!-- Booking cards will be added here dynamically -->
                </VBox>

            </VBox>
        </ScrollPane>
    </center>

    <!-- Footer -->
    <bottom>
        <HBox alignment="CENTER" style="-fx-padding: 20; -fx-background-color: rgba(0,0,0,0.2);">
            <Label
                text="💡 Tip: You can view your booking details by clicking 'View Details' button"
                style="-fx-text-fill: rgba(255,255,255,0.8); -fx-font-size: 12px;" />
        </HBox>
    </bottom>

</BorderPane>