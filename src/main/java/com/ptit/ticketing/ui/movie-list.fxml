<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ptit.ticketing.ui.MovieController">
   <children>
      <HBox alignment="CENTER_LEFT" layoutX="14.0" layoutY="14.0" spacing="10.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
         <children>
            <TextField fx:id="searchField" onKeyReleased="#handleSearch" promptText="Tìm kiếm theo tên phim..." HBox.hgrow="ALWAYS" />
            <Button mnemonicParsing="false" onAction="#handleAddMovie" style="-fx-background-color: #28a745; -fx-text-fill: white;" text="Thêm Phim" />
            <Button mnemonicParsing="false" onAction="#handleEditMovie" text="Sửa Phim" />
            <Button mnemonicParsing="false" onAction="#handleDeleteMovie" style="-fx-background-color: #dc3545; -fx-text-fill: white;" text="Xóa Phim" />
         </children>
      </HBox>
      <TableView fx:id="movieTableView" layoutX="20.0" layoutY="70.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="70.0">
        <columns>
          <TableColumn fx:id="titleColumn" prefWidth="250.0" text="Tiêu đề" />
          <TableColumn fx:id="durationColumn" prefWidth="100.0" text="Thời lượng (phút)" />
            <TableColumn fx:id="ratingColumn" prefWidth="100.0" text="Xếp hạng (PG)" />
            <TableColumn fx:id="releaseDateColumn" prefWidth="150.0" text="Ngày phát hành" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </children>
</AnchorPane>